@model IEnumerable<CommentForm.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>
                        @Html.DisplayFor(modelItem => item.Name)
                    </h3>
                    <h4>
                        @Html.DisplayFor(modelItem => item.Procedure.Title)
                    </h4>
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <p>
                        <span class="label label-default"> @Html.DisplayNameFor(model => model.Priority)</span> @Html.DisplayFor(modelItem => item.Priority)
                    </p>

                    
                    @Html.ActionLink("Details", "Details", new { id = item.CommentID }, new { @class = "btn btn-primary", role = "button" })
                    
                </div>
            </div>
        </div>
    }
</div>

